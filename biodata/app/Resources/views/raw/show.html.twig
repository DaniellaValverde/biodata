{% extends 'base.html.twig' %}

{% block body %}
    <h1>Raw</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ raw.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{% if raw.day %}{{ raw.day|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{% if raw.duration %}{{ raw.duration|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Baseline</th>
                <td>{{ raw.baseline }}</td>
            </tr>
            <tr>
                <th>Heglevel</th>
                <td>{{ raw.hEGLevel }}</td>
            </tr>
            <tr>
                <th>Hegave</th>
                <td>{{ raw.hEGAve }}</td>
            </tr>
            <tr>
                <th>Hegmax</th>
                <td>{{ raw.hEGMax }}</td>
            </tr>
            <tr>
                <th>Gain</th>
                <td>{{ raw.gain }}</td>
            </tr>
            <tr>
                <th>Normedgain</th>
                <td>{{ raw.normedGain }}</td>
            </tr>
            <tr>
                <th>Maxgain</th>
                <td>{{ raw.maxGain }}</td>
            </tr>
            <tr>
                <th>Timeabovebase</th>
                <td>{{ raw.timeAboveBase }}</td>
            </tr>
            <tr>
                <th>Percentsucess</th>
                <td>{{ raw.percentSucess }}</td>
            </tr>
            <tr>
                <th>Event</th>
                <td>{{ raw.event }}</td>
            </tr>
            <tr>
                <th>Eyes</th>
                <td>{% if raw.eyes %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('raw_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('raw_edit', { 'id': raw.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
